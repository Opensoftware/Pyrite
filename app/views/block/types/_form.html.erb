<%= form_for @block_type, :html => { :class => "form-horizontal" } do |f| %>
  <div class="control-group">
    <label class="control-label" for=""> <%= t "label_block_type_name" %></label>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for=""> <%= t "label_block_type_short_name" %></label>
    <div class="controls">
      <%= f.text_field :short_name %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for=""> <%= t "label_block_type_description" %></label>
    <div class="controls">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t("button_save") %>
  </div>
<% end %>

