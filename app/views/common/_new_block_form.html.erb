<%= form_for Block.new, :html => { :id => "new-block-form-modal" } do |f| %>
  <div class="errors"> </div>
  <div class="row">
    <div class="col-md-10">
      <div class="row">
        <div class="form-group col-md-6">
          <label> <%= t("label_groups") %> </label>
          <div id="groups_label_container"> </div>
        </div>
        <div class="form-group col-md-6">
          <label> <%= t("label_room") %> </label>
          <div id="room_label_container"> </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-6">
          <label> <%= t("label_lecturer") %> </label>
          <div>
            <%= f.collection_select :lecturer_id, Lecturer.all, :id,
              :name_with_title, { :include_blank => true },
              { "data-placeholder" => t("prompt_lecturer"), :class => "chosen-select", :tabindex => 6 } %>
          </div>
        </div>
        <div class="form-group col-md-6">
          <label> <%= t("label_block_name") %> </label>
          <div>
            <%= f.text_field :name, :tabindex => 9 %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-6">
          <label> <%= t("label_block_type") %> </label>
          <div>
            <%= f.collection_select :type_id, Block::Variant.all, :id, :name, {}, {:tabindex => 7} %>
          </div>
        </div>
        <div class="form-group col-md-6">
          <label> <%= t("label_comments") %> </label>
          <div>
            <td> <%= f.text_field :comments, :tabindex => 10 %> </td>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-6">
          <label> <%= t("label_block_start_time") %> </label>
          <div>
            <%= f.text_field :start_time, :class => "timepicker", :autocomplete => :off %>
          </div>
        </div>
        <div class="form-group col-md-6">
          <label> <%= t("label_block_end_time") %> </label>
          <div>
            <%= f.text_field :end_time, :class => "timepicker", :autocomplete => :off  %>
            <%= f.hidden_field :day_with_date %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
