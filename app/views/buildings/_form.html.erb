<%= content_for(:additional_javascript_libraries) do %>
  <%= javascript_include_tag "OpenLayers" %>
  <%= javascript_include_tag "buildings" %>
  <%= javascript_include_tag "buildings/edit" %>
<% end %>

<%= content_for(:additional_stylesheets) do %>
  <%= stylesheet_link_tag "buildings" %>
<% end %>

<%= form_for @building, :html => {:class => "form-horizontal"} do |f| %>
  <%= error_msgs_for @building %>

  <div class="control-group">
    <label class="control-label" for=""> <%= t "label_building_name" %></label>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for=""> <%= t "label_building_address" %></label>
    <div class="controls">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="control-group">
    <div id="map"> </div>
    <div class="controls">
      <%= f.hidden_field :latitude, :id => "latitude" %>
      <%= f.hidden_field :longitude, :id => "longitude" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit t("button_save") %>
  </div>
<% end %>
