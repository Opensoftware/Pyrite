<%= form_for @room, :html => {:class => "form-horizontal"} do |f| %>
  <%= error_msgs_for @room %>

  <div class="control-group">
    <label class="control-label" for=""> <%= t "label_classroom_name" %></label>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for=""> <%= t "label_classroom_type" %></label>
    <div class="controls">
      <%= f.text_field :type %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for=""> <%= t "label_classroom_capacity" %></label>
    <div class="controls">
      <%= f.text_field :capacity %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for=""> <%= t "label_building_name" %></label>
    <div class="controls">
      <%= f.collection_select :building_id, Building.all, :id, :name %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for=""> <%= t "label_classroom_comments"%></label>
    <div class="controls">
      <%= f.text_area :comments, :size => "5x5" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit t("button_save") %>
  </div>
<% end %>
