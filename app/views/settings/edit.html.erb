<h1> <%= t("header_edit_settings") %> </h1>
<div>
  <%= form_for @settings, :url => settings_path, :method => :put do |f|%>
    Plan do wyświetlania: <%= f.collection_select(:current_plan, Schedule.find(:all), :id, :semestr_rok, {:prompt => "Wybierz plan"}) %>
    Plan do edycji: <%= f.collection_select(:plan_to_edit, Schedule.find(:all), :id, :semestr_rok, {:prompt => "Wybierz plan"}) %>
    Nazwa wydziału: <%= f.text_field :unit_name %>
    Email kontaktowy: <%= f.text_field :email_contact %>

    <%= f.submit t("button_save") %>
  <% end %>
</div>
