<%= form_for @lecturer, :html => { :class => "form-horizontal" } do |f| %>
  <%= error_msgs_for @lecturer %>

  <div class="control-group">
    <label class="control-label" for="">
      <%= t "label_lecturer_full_name" %>
    </label>
    <div class="controls">
      <%= f.text_field :full_name %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="">
      <%= t "label_lecturer_title" %>
    </label>
    <div class="controls">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit t("button_save") %>
  </div>
<% end %>
