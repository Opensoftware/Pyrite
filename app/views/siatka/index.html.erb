<table align="center" id="panel">
<tr>
	<td>
		<ul>
			<% if can? :manage, User %>
              <li>
                <p> <%= link_to("Uprawnienia", {:controller => 'siatka', :action => 'admin'}) %> </p>
              </li>
            <% end %>
			<% if can? :manage, Settings %>
              <li>
                <p> <%= link_to t("link_settings"), edit_settings_path %> </p>
              </li>
            <% end %>
			<% if can? :manage, User %>
              <li>
                <p> <%= link_to "Stwórz konto", new_user_registration_path %> </p>
              </li>
            <% end %>
			<% if can? :manage, Freeday %>
              <li>
                <p> <%= link_to("Ustaw dni wolne", freedays_path) %> </p>
              </li>
            <% end %>
			<% if can? :manage, Schedule %>
		      <li>
                <p> <%= link_to("Zarządzaj planami", schedules_path) %> </p>
              </li>
            <% end %>
			<% if can? :manage, Room %>
		      <li>
                <p> <%= link_to t("link_classrooms"), rooms_path %> </p>
              </li>
            <% end %>
			<% if can? :manage, AcademicYear %>
		      <li>
                <p> <%= link_to t("link_academic_years"), academic_years_path %> </p>
              </li>
            <% end %>
		</ul>
	</td>
    <td>
      <ul>
        <% if can? :manage, Plan %>
          <li>
            <p> <%= link_to("Rezerwuj salę", {:controller => 'siatka', :action => 'rezerwacja'}) %> </p>
