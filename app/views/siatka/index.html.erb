          </li>
          <li>
            <p> <%= link_to("Drukowanie planów", {:controller => 'siatka', :action => 'drukowanie'}) %> </p>
          </li>
        <% end %>
        <% if can? :manage, :all %>
          <li>
            <p> <%= link_to("Statystyki", {:controller => 'siatka', :action => 'statystyki'}) %> </p>
          </li>
        <% end %>
      </ul>
