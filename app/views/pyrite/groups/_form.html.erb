<%= form_for @group do |f| %>
  <%= error_msgs_for @group %>

  <div class="form-group">
    <label for=""> <%= t "label_group_name" %></label>
    <div>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-group">
    <label for=""> <%= t "label_group_size" %></label>
    <div>
      <%= f.number_field :size %>
    </div>
  </div>
  <div class="form-group">
    <label for=""> <%= t "pyrite.label.groups.is_part_time" %></label>
    <div>
      <%= f.check_box :part_time %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit t("button_save"), :class => "submit-btn pull-right" %>
  </div>
<% end %>
