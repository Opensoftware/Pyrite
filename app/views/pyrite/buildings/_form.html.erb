<%= content_for(:additional_javascript_libraries) do %>
  <%= javascript_include_tag "pyrite/OpenLayers" %>
  <%= javascript_include_tag "pyrite/buildings" %>
  <%= javascript_include_tag "pyrite/buildings/edit" %>
<% end %>

<%= content_for(:additional_stylesheets) do %>
  <%= stylesheet_link_tag "pyrite/buildings" %>
<% end %>

<%= form_for @building do |f| %>
  <%= error_msgs_for @building %>

  <div class="form-group">
    <label> <%= t "label_building_name" %></label>
    <div>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-group">
    <label> <%= t "label_building_address" %></label>
    <div>
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="form-group">
    <label> <%= t "label_building_localization" %></label>
    <div id="map"> </div>
    <%= f.hidden_field :latitude, :id => "latitude" %>
    <%= f.hidden_field :longitude, :id => "longitude" %>
  </div>
  <div class="actions">
    <%= f.submit t("button_save"), :class => "submit-btn pull-right" %>
  </div>
<% end %>
