<%= form_for @subject do |f| %>
  <%= error_msgs_for @subject %>

  <div class="form-group">
    <label for=""> <%= t "pyrite.label.subject.name" %></label>
    <div>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit t("button_save"), :class => "submit-btn pull-right" %>
  </div>
<% end %>
