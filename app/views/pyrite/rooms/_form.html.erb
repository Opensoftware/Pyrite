<%= form_for @room do |f| %>
  <%= error_msgs_for @room %>

  <div class="form-group">
    <label> <%= t "label_classroom_name" %></label>
    <div>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-group">
    <label> <%= t "label_classroom_type" %></label>
    <div>
      <%= f.collection_select :room_type_id, @room_types, :id, :short_name %>
    </div>
  </div>
  <div class="form-group">
    <label> <%= t "label_classroom_capacity" %></label>
    <div>
      <%= f.text_field :capacity %>
    </div>
  </div>
  <div class="form-group">
    <label> <%= t "label_building_name" %></label>
    <div>
      <%= f.collection_select :building_id, @buildings, :id, :name %>
    </div>
  </div>
  <div class="form-group">
    <label> <%= t "label_classroom_comments"%></label>
    <div>
      <%= f.text_area :comments %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit t("button_save"), :class => "submit-btn pull-right" %>
  </div>
<% end %>
