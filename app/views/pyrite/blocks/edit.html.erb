<%= form_for @block, :remote => true do |f| %>
  <div class="errors"> </div>
  <div class="form-group">
    <label> <%= t "label_groups" %></label>
    <div>
      <%= f.collection_select :group_ids, @groups, :id, :name,
                              {:selected => @block.group_ids},
                              {:multiple => true, :tabindex => 1} %>
    </div>
  </div>
  <div class="form-group">
    <label> <%= t "label_lecturer" %></label>
    <div>
      <%= f.collection_select :lecturer_ids, @lecturers, :id,
        :full_name, { :selected => @block.lecturer_ids },
        {
          :multiple => true, "data-placeholder" => t("prompt_lecturer"),
          :class => "chosen-select", :tabindex => 2
        } %>
    </div>
  </div>
  <div class="form-group">
    <label> <%= t "label_room" %></label>
    <div>
       <%= f.collection_select :room_ids, @rooms, :id, :name_with_building,
                               {:selected => @block.room_ids},
                               {:multiple => true, "data-timetable-url" => rooms_timetable_path,
                               :tabindex => 3, :class => "chosen-select",
                               "data-placeholder" => t("placeholder_click_to_choose")}%>
    </div>
  </div>
  <div class="form-group">
    <label> <%= t "label_comments" %></label>
    <div>
      <%= f.text_field :comments %>
    </div>
  </div>
  <div class="form-group">
    <label> <%= t "label_block_type" %></label>
    <div>
      <%= f.collection_select :variant_id, @block_variants, :id, :name %>
    </div>
  </div>
  <div class="form-group">
    <label> <%= t "label_block_name" %></label>
    <div>
      <%= f.collection_select :subject_id, @subjects, :id, :name,
                              {:selected => @block.subject_id, :include_blank => true},
                              { :class => "select2", :style => "width: 100%",
                               "data-placeholder" => t("placeholder_click_to_choose")}%>
    </div>
  </div>

<% end %>
