<%= content_for(:additional_javascript_libraries) do %>
  <%= javascript_include_tag "pyrite/academic_years" %>
<% end %>

<%= form_for @academic_year do |f| %>
  <%= error_msgs_for @academic_year %>

  <div class="form-group">
    <label> <%= t "label_academic_year_name" %></label>
    <div>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-group">
    <label> <%= t "label_academic_year_start_date" %></label>
    <div>
      <%= f.text_field :start_date, :class => "datepicker", :autocomplete => :off %>
    </div>
  </div>
  <div class="form-group">
    <label> <%= t "label_academic_year_end_date" %></label>
    <div>
      <%= f.text_field :end_date, :class => "datepicker", :autocomplete => :off %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t("button_save"), :class => "submit-btn pull-right" %>
  </div>
<% end %>

