<div class="row">
<div class="span3">
  <dl class="dl-horizontal">
    <dt> <%= t("label_academic_year_name") %> </dt>
    <dd> <%= @academic_year.name %> </dd>
    <dt> <%= t("label_academic_year_start_date") %> </dt>
    <dd> <%= @academic_year.start_date %> </dd>
    <dt> <%= t("label_academic_year_end_date") %> </dt>
    <dd> <%= @academic_year.end_date %> </dd>
  </dl>
</div>
</div>

<h2> <%= t "header_academic_year_events" %> <%= @academic_year.name %> </h2>
<table class="table">
  <thead>
    <tr>
      <th> <%= t "label_academic_year_event_name" %> </th>
      <th> <%= t "label_academic_year_event_start_date" %> </th>
      <th> <%= t "label_academic_year_event_end_date" %> </th>
      <th> <%= t "label_academic_year_event_lecture_free" %> </th>
    </tr>
  </thead>
  <tbody>
    <% @academic_year.events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_date.strftime("%F") %></td>
        <td><%= event.end_date.strftime("%F") %></td>
        <td><%= event.lecture_free %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t("button_edit"), edit_academic_year_path(@academic_year), :class => "edit-btn" %>
<%= link_to t("button_back"), academic_years_path, :class => "back-btn" %>
