<%= form_for @lecturer do |f| %>
  <%= error_msgs_for @lecturer %>

  <div class="form-group">
    <label>
      <%= t "label_lecturer_full_name" %>
    </label>
    <div>
      <%= f.text_field :full_name %>
    </div>
  </div>
  <div class="form-group">
    <label>
      <%= t "label_lecturer_title" %>
    </label>
    <div>
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit t("button_save"), :class => "submit-btn pull-right" %>
  </div>
<% end %>
