<h1> <%= t "header_listing_lecturers" %> </h1>

<%= link_to t("button_new_lecturer"), new_lecturer_path, :class => "submit-btn pull-right" %>
<table class="table">
  <thead>
    <tr>
      <th> <%= t("label_lecturer_title") %> </th>
      <th> <%= t("label_lecturer_full_name") %></th>
      <th> <%= t("label_actions") %></th>
  </tr>
  </thead>
  <tbody>
    <% @lecturers.each do |lecturer| %>
      <tr>
        <td> <%= lecturer.title %> </td>
        <td> <%= lecturer.full_name %> </td>
        <td>
          <%= link_to t("button_edit"), edit_lecturer_path(lecturer), :class => "edit-btn" %>
          <%= link_to t("button_delete"), lecturer, method: :delete, data: { confirm: t("confirm_removing_lecturer") }, :class => "destroy-btn" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
